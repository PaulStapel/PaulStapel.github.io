{{- $pages := slice -}}
{{- range .Site.RegularPages -}}
  {{- $cats := slice -}}
  {{- range .GetTerms "categories" -}}
    {{- $cats = $cats | append .Name -}}
  {{- end -}}
  {{- $pages = $pages | append (dict
      "title" .Title
      "description" .Params.description
      "categories" $cats
  ) -}}
{{- end -}}
{{- $pages | jsonify -}}



